<?xml version="1.0" encoding="UTF-8"?>

<phpunit colors="true" bootstrap="vendor/autoload.php" defaultTestSuite="Main">
  <testsuites>
    <testsuite name="Main">
      <directory>tests/</directory>
    </testsuite>
  </testsuites>

  <php>
    <ini name="error_reporting" value="-1" />
  </php>

  <filter>
    <whitelist>
      <directory>./src/</directory>
      <exclude>
        <directory>./tests</directory>
      </exclude>
    </whitelist>
  </filter>

</phpunit>
